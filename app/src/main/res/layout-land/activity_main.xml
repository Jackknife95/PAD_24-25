<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Logo de Dices and Dragons a la izquierda -->
    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/logo"
        android:scaleType="centerCrop"
        android:adjustViewBounds="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonContainer"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"/>

    <!-- Contenedor para los botones alineados a la derecha -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#493D22"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/headerImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="16dp"
        android:gravity="center">

    <!-- Botón para Tiradas de Dados -->
    <Button
        android:id="@+id/btnDiceRolls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiradas de Dados"
        android:textSize="20sp"
        android:layout_marginBottom="24dp"
        android:padding="16dp"/>

    <!-- Botón para Selección de Partida -->
    <Button
        android:id="@+id/btnGameSession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selección de Partida"
        android:textSize="20sp"
        android:layout_marginBottom="24dp"
        android:padding="16dp"/>

    <!-- Botón para Creador de Armas -->
    <Button
        android:id="@+id/btnWeaponCreator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Creador de Armas"
        android:textSize="20sp"
        android:padding="16dp"/>
</LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
