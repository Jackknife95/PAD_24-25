<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".MainActivity">

    <!-- RadioGroup para seleccionar entre libro o revista -->
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/rbLibro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/libro"
            android:checked="true"
            android:textColor="@color/textColorPrimary"/>

        <RadioButton
            android:id="@+id/rbRevista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/revista"
            android:textColor="@color/textColorPrimary"/>

        <RadioButton
            android:id="@+id/rbAmbos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ambos"
            android:textColor="@color/textColorPrimary"/>
    </RadioGroup>

    <!-- LinearLayout horizontal para el título y el autor -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/radioGroup"
        android:layout_marginTop="16dp">

        <!-- Campo de texto para ingresar el título -->
        <EditText
            android:id="@+id/etTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/introducir_titulo"
            android:inputType="text"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"/>

        <!-- Campo de texto para ingresar el autor (solo visible para libros) -->
        <EditText
            android:id="@+id/etAutor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/introducir_autor"
            android:inputType="text"
            android:layout_weight="1"
            android:visibility="gone"/> <!-- Cambiar a "visible" según sea necesario -->
    </LinearLayout>

    <!-- Botón para realizar la búsqueda -->
    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/botonBuscar"
        android:background="@color/buttonBackground"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Línea separadora debajo del botón de búsqueda -->
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separatorColor"
        app:layout_constraintTop_toBottomOf="@id/btnBuscar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Texto de estado para mostrar "Resultados", "Cargando...", o "No se han encontrado resultados" -->
    <TextView
        android:id="@+id/tvResultados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resultados"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/textColorResultados"
        app:layout_constraintTop_toBottomOf="@id/separator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:visibility="gone"/>

    <!-- RecyclerView para mostrar los libros -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBooks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvResultados"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        tools:listitem="@layout/book_item"/>

</androidx.constraintlayout.widget.ConstraintLayout>
