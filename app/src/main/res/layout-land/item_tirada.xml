<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:radius="8dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#493D22">

        <!-- Nombre de la tirada -->
        <TextView
            android:id="@+id/tiradaNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/agbalumo"
            android:gravity="center"
            android:text="Tirada: Ataque"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Cantidad de dados -->
        <TextView
            android:id="@+id/tiradaCantidadDados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/agbalumo"
            android:gravity="center"
            android:text="Cantidad de dados: 2"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Número de caras -->
        <TextView
            android:id="@+id/tiradaNumeroCaras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/agbalumo"
            android:gravity="center"
            android:text="Número de caras: 20"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Resultado -->
        <TextView
            android:id="@+id/tiradaResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/agbalumo"
            android:gravity="center"
            android:text="Resultado: 15"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
