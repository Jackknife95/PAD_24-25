<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#493D22">

    <!-- Contenedor principal en modo horizontal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Columna izquierda: Entrada y selección -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingEnd="8dp">

            <!-- Spinner para seleccionar el tipo de dado -->
            <Spinner
                android:id="@+id/diceSpinner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#D2B48C"
                android:textSize="18sp"
                android:padding="8dp" />

            <!-- Botón para lanzar el dado -->
            <Button
                android:id="@+id/rollButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#D2B48C"
                android:text="Lanzar Dado"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="@font/agbalumo" />

            <!-- Imagen del dado debajo del botón -->
            <ImageView
                android:id="@+id/diceImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:contentDescription="Imagen del dado"
                android:src="@android:drawable/ic_menu_help"
                android:layout_gravity="center" />

        </LinearLayout>

        <!-- Columna derecha: Resultado -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingStart="8dp">

            <!-- Campo para el resultado -->
            <TextView
                android:id="@+id/resultText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Resultado: "
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
