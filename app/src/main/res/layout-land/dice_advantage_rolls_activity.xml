<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#493D22">

    <!-- Contenedor principal en modo horizontal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Columna izquierda: Entrada, selección y botón -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingEnd="8dp">

            <!-- Spinner para seleccionar el número de dados -->
            <Spinner
                android:id="@+id/numDiceSpinner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#ECDEB2" />

            <!-- Spinner para seleccionar el dado -->
            <Spinner
                android:id="@+id/diceSpinner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#ECDEB2" />

            <!-- Botón para lanzar los dados -->
            <Button
                android:id="@+id/rollButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="#ECDEB2"
                android:textColor="#000000"
                android:text="@string/roll_button_text"
                android:textSize="20sp"
                android:fontFamily="@font/agbalumo" />

            <!-- Imagen del dado en tamaño pequeño -->
            <ImageView
                android:id="@+id/diceImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/dice_image_description"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <!-- Columna derecha: Resultado -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingStart="8dp">

            <!-- Texto para mostrar el resultado -->
            <TextView
                android:id="@+id/resultText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/result_text"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/agbalumo"
                android:textColor="#ECDEB2"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
