<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#493D22">

    <TextView
        android:id="@+id/gameCreatorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_creator_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/gameNameEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/game_name_hint"
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        app:layout_constraintTop_toBottomOf="@id/gameCreatorTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/characterNameEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/character_name_hint"
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        app:layout_constraintTop_toBottomOf="@id/gameNameEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/confirmGameButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/confirm_game_button_text"
        android:textSize="18sp"
        android:backgroundTint="#D2B48C"
        android:textColor="#000000"
        android:fontFamily="@font/agbalumo"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/characterNameEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
