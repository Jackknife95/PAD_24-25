<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Logo de Dices and Dragons -->
    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="0dp"/>

    <!-- Contenedor para los botones con fondo negro -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#493D22"
        app:layout_constraintTop_toBottomOf="@id/headerImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="16dp">

        <!-- Botón para Tiradas de Dados -->
        <Button
            android:id="@+id/btnDiceRolls"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Tiradas de Dados"
            android:textSize="20sp"
            android:layout_marginBottom="24dp"
            android:padding="16dp"/>

        <!-- Botón para Selección de Partida -->
        <Button
            android:id="@+id/btnGameSession"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Selección de Partida"
            android:textSize="20sp"
            android:layout_marginBottom="24dp"
            android:padding="16dp"/>

        <!-- Botón para Creador de Armas -->
        <Button
            android:id="@+id/btnWeaponCreator"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Creador de Armas"
            android:textSize="20sp"
            android:padding="16dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>